@model GigHub.ViewModels.GigsViewModel
@{
    ViewBag.Title = Model.Heading;
}


<h2 class="head-text">@Model.Heading</h2>
<ul class="gigs">
    @foreach (var gig in Model.UpcomingGigs)
    {
    <li>
        <div class="date">
            <div class="month">
                @gig.DateTime.ToString("MMM")
            </div>
            <div class="day">
                @gig.DateTime.ToString("d ")
            </div>
        </div>
        <div class="details">
            <span class="artist">
                @Html.ActionLink(gig.Artist.Name, "Detail", "Gigs", new { gigId = gig.Id}, null)
                @if (Model.ShowActions)
                {
                    <span class="follow-link"><a data-artist-id="@gig.ArtistId" class="js-toggle-follow" href="#">Follow</a></span>
                }
            </span>
            <span class="genre">
                @gig.Genre.Name
            </span>
            @if (Model.ShowActions)
            {
        <button data-gig-id="@gig.Id"
                class="
                    js-toggle-attendance
                    btn
                    @(Model.Attendances.Contains(gig.Id) ? "btn-info" : "btn-default")
                    btn-xsm pull-right">
                    @(Model.Attendances.Contains(gig.Id) ? "Going" : "Going ?")
        </button>
            }

        </div>
        
    </li>
    }
</ul>
@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                
               $.post("/api/attendances", { GigId : button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("something failed")
                    })
            });

            $(".js-toggle-follow").click(function (e) {
                var link = $(e.target)
                console.log(link.attr("data-artist-id"));

                $.post("/api/followings", { FolloweeId: link.attr("data-artist-id") })
                     .done(function () {
                            link                                
                                .text("Following");
                        })
                        .fail(function () {
                            alert("something failed")
                        })
            })
        });;
    </script>
}